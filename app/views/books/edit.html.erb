<h1>Editing Book</h1>

<div class = "edit">


  <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


<%= form_with model: @book do |f| %>

<div class= "form">
  <label class = "label">Title</label>
  <%= f.text_field :title %>
</div>
  
<div class= "form">
  <label class = "label">Body</label>
  <%= f.text_area :body %>
</div>
  
<div class = "button"><%= f.submit 'Update Book' %></div>
<% end %>


<div class = "link_edit">
  <span class = "link"><%= link_to "Show", book_path(@book.id) %></span>
  <span>|</span>
  <span class = "link"><%= link_to "Back", books_path %></span>
</div>

</div>