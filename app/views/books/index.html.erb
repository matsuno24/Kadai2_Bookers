<h1>Books</h1>

<div class= "table">
    <table>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
        
        <% @books.each do |books| %>
        <tr class = "class">
            <td class = "title"><%= books.title %></td>
            <td class = "body"><%= books.body %></td>
        <span class = "link_group">
            <td class = "link"><%= link_to "Show", book_path(books.id) %></td>
            <td class = "link"><%= link_to "Edit", edit_book_path(books.id) %></td>
            <td class = "link"><%= link_to "Destroy", book_path(books.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </span>
        </tr>
        <% end %>
    </table>
</div>


<h2>New book</h2>

    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>


<%= form_with model: @book do |f| %>
<div class= "form">
  <label class = "label">Title</label>
  <%= f.text_field :title %>
</div>
  
<div class= "form">
  <label class = "label">Body</label>
  <%= f.text_area :body %>
</div>
  
  <div class = "button"><%= f.submit 'Create Book' %></div>
<% end %>

