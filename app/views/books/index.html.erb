<h1>Book</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    
    <% @books.each do |books| %>
    <tr>
        <td><%= books.title %></td>
        <td><%= books.body %></td>
        <td><%= link_to "Show", book_path(books.id) %></td>
        <td><%= link_to "Edit", edit_book_path(books.id) %></td>
        <td><%= link_to "Destroy", book_path(books.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
</table>


<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %> 
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>

